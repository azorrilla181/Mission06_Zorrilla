@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<form asp-action="AddMovie" method="post">
    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" class="form-control" id="Category" name="Category" required />
    </div>
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>
    <div class="form-group">
        <label for="Year">Year</label>
        <input type="number" class="form-control" id="Year" name="Year" required />
    </div>
    <div class="form-group">
        <label for="Director">Director</label>
        <input type="text" class="form-control" id="Director" name="Director" required />
    </div>
    <div class="form-group">
        <label for="Rating">Rating</label>
        <select class="form-control" id="Rating" name="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Edited">Edited</label>
        <select class="form-control" id="Edited" name="Edited">
            <option value=""></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label for="LentTo">Lent To</label>
        <input type="text" class="form-control" id="LentTo" name="LentTo" />
    </div>
    <div class="form-group">
        <label for="Notes">Notes</label>
        <input type="text" class="form-control" id="Notes" name="Notes" maxlength="25" />
    </div>
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>