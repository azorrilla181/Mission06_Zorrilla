@{
}
@model List<Movie>

<table>
	<thead>
		<tr>
			<td>Category</td>
			<td>Title</td>
			<td>Year</td>
			<td>Director</td>
			<td>Rating</td>
			<td>Edited</td>
			<td>Lent To</td>
			<td>Copied To Plex</td>
			<td>Notes</td>
		</tr>
	</thead>

	@foreach (Movie m in Model)
	{
		<tr>
			<td>@m.Category.CategoryName</td>
			<td>@m.Title</td>
			<td>@m.Year</td>
			<td>@m.Director</td>
			<td>@m.Rating</td>
			<td>@m.Edited</td>
			<td>@m.LentTo</td>
			<td>@m.CopiedToPlex</td>
			<td>@m.Notes</td>

			<td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieID">Edit</a></td>
			<td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieID">Delete</a></td>
		</tr>
	}

	</table>


